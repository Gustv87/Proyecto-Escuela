<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Views.ViewOpciones"
             Title="Opciones"
             BackgroundColor="White"
             xmlns:local="clr-namespace:Proyecto.ViewModels">

    <ContentPage.BindingContext>
        <local:ViewModelOpciones></local:ViewModelOpciones>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="10" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Frame BackgroundColor="#06068c" CornerRadius="30" Padding="0">
                <Button Command="{Binding Reporte_Notas}" Text="Reporte Notas" TextColor="White" FontAttributes="Bold" BackgroundColor="Transparent" HorizontalOptions="Center" HeightRequest="60" WidthRequest="200"/>
            </Frame>
            
            <Frame BackgroundColor="#06068c" CornerRadius="30" Padding="0">
                <Button Command="{Binding Asistencia}" Text="Asistencia" TextColor="White" FontAttributes="Bold" BackgroundColor="Transparent" HorizontalOptions="Center" HeightRequest="60" WidthRequest="200"/>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>